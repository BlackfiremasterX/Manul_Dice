<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/asphalt"
    tools:context=".Manul_Obmanul">

    <ImageView
        android:id="@+id/manul_one"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"></ImageView>

    <ImageView
        android:id="@+id/manul_two"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"></ImageView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_one"
                style="@style/View_Grid"
                android:onClick="playSound18"
                app:srcCompat="@drawable/one" />

            <ImageView
                android:id="@+id/iv_two"
                style="@style/View_Grid"
                android:onClick="playSound16"
                app:srcCompat="@drawable/two" />

            <ImageView
                android:id="@+id/iv_three"
                style="@style/View_Grid"
                android:onClick="playSound13"
                app:srcCompat="@drawable/three" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_four"
                style="@style/View_Grid"
                app:srcCompat="@drawable/four" />

            <ImageView
                android:id="@+id/iv_five"
                style="@style/View_Grid"
                app:srcCompat="@drawable/five" />

            <ImageView
                android:id="@+id/iv_six"
                style="@style/View_Grid"
                app:srcCompat="@drawable/six" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/iv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_fa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_sol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />

        <ImageView
            android:id="@+id/iv_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/notekey" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>